{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "typeRoots": [ "./node_modules/@types", "./src/@types" ],
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "lib": ["es2015", "dom"]
    },
    "include": [
        "./src/@types/*.d.ts",
        "./src/@types/*.css.d.ts"
    ],
    "exclude": ["./node_modules"]
}